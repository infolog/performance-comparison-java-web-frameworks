<html t:type="template" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
<body>

<div class="section">
    <h1>Change Your Password</h1>
</div>
<div class="section">
    <t:form t:id="form">
    <fieldset>
        <div class="entry">
            <div class="label">Password:</div>
            <div class="input">
                <input t:type="PasswordField" t:value="user.password"/>
            </div>
	</div>
        <div class="entry">
            <div class="label">Verify:</div>
            <div class="input">
                <input t:type="PasswordField" t:id="verify"/>
            </div>
	</div>
        <div class="entry">
            <div class="label"></div>
            <div class="input">
                <input type="submit" value="Change"/>&#160;
                <t:submit t:id="cancel" value="Cancel"/>
            </div>
        </div>
    </fieldset>
    </t:form>
</div>

</body>
</html>
